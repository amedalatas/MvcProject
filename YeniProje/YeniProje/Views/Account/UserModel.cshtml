@model YeniProje.Models.UserModel

@{
    ViewBag.Title = "UserModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserModel</h2>
<hr />

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(i => i.Username, new { @class = "form-group" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(i => i.Email, new { @class = "form-group" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(i => i.Password, new { @class = "form-group" })
    </div>

}

